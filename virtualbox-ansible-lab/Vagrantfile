# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  # Define the base box
  config.vm.box = "centos/7"

  # Disable automatic box update checking
  config.vm.box_check_update = false

  # Define the control node
  config.vm.define "control" do |control|
    control.vm.hostname = "control"
    control.vm.network "private_network", ip: "192.168.56.10"
    control.vm.provider "virtualbox" do |vb|
      vb.name = "control"
      vb.memory = "1024"
      vb.cpus = 1
    end
  end

  # Define the managed nodes
  (1..2).each do |i|
    config.vm.define "managed#{i}" do |managed|
      managed.vm.hostname = "managed#{i}"
      managed.vm.network "private_network", ip: "192.168.56.10#{i}"
      managed.vm.provider "virtualbox" do |vb|
        vb.name = "managed#{i}"
        vb.memory = "512"
        vb.cpus = 1
      end
    end
  end
end
